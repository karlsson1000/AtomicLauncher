{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Atomic Launcher",
  "version": "26.1.8",
  "identifier": "dev.karlsson.atomic-launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Atomic Launcher",
        "width": 1400,
        "height": 800,
        "backgroundColor": "#0d0d0d",
        "decorations": false,
        "transparent": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "app",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/karlsson1000/AtomicLauncher/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDczNERFNjZCNEY5NzQ5NjAKUldSZ1NaZFBhK1pOY3dCeUxBaisrV2lnaE93ampHeDNnN3hkeDU2ci9VUWV3Wjl6OGxPY1JqeGYK"
    }
  }
}